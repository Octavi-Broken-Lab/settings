<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" >

    <Preference
         android:layout="@layout/about_pref" 
         android:key="themes"
         android:title="Accent"
         android:summary="RGB accent picker"
         android:fragment="com.octavi.lab.fragments.OctaviThemes" />

    <Preference
         android:layout="@layout/about_pref" 
         android:key="powermenu"
         android:title="@string/powermenu_title"
  	 android:summary="Customise power menu"
         android:fragment="com.octavi.lab.fragments.PowermenuSettings" />

     <Preference
         android:layout="@layout/about_pref"
         android:key="navbar"
         android:title="Navigation Bar"
         android:summary="Navigation Bar Customizations"
         android:fragment="com.octavi.lab.fragments.NavbarSettings" />

    <Preference
         settings:iconSpaceReserved="false"
         android:key="quicksettings"
         android:title="@string/quicksettings_title"
         android:fragment="com.octavi.lab.fragments.QuickSettings" />

    <PreferenceScreen
         settings:iconSpaceReserved="false"
         android:key="ambient_display_custom"
         android:persistent="false"
         android:title="@string/ambient_display_custom_title">
            <intent 
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.custom.ambient.display"
                android:targetClass="com.custom.ambient.display.DozeSettings" />
    </PreferenceScreen>

    <Preference
         android:key="ambient_stuff"
         android:title="@string/ambient_stuff_title"
         android:summary="@string/ambient_stuff_summary"
         android:fragment="com.octavi.lab.fragments.AmbientStuffSettings" />

    <com.octavi.lab.preferences.SystemSettingListPreference
         settings:iconSpaceReserved="false"
         android:key="screenshot_type"
         android:entries="@array/screenshot_type_entries"
         android:entryValues="@array/screenshot_type_values"
         android:title="@string/screenshot_type_title"
         android:defaultValue="0" />

</PreferenceScreen>
